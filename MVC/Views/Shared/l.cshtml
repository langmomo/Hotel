@model MVC.Models.HotelManage
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<link href="http://code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.min.css" rel="stylesheet" type="text/css" />
	<script src="http://code.jquery.com/jquery-3.3.1.min.js"
			integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
			crossorigin="anonymous">
	</script>

	<script src="http://code.jquery.com/ui/1.10.4/jquery-ui.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
	
	<style>
		body {
			background: url(https://s-ec.bstatic.com/images/hotel/max1280x900/135/135163519.jpg);
			background-size: contain;
		}
	</style>
</head>
<body>
	<nav class="navbar navbar-expand-lg navbar-light bg-dark">
		<a class="navbar-brand text-primary" style="font-size:x-large"href="#">H&Hotel</a>
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>

		<div class="collapse navbar-collapse " id="navbarTogglerDemo02">
			<ul class="navbar-nav mr-auto mt-2 mt-lg-0">
				<li class="nav-item active">
					<a class="nav-link text-primary" asp-controller="Home" asp-action="HomePage">Home <span class="sr-only">(current)</span></a>
				</li>
				<li class="nav-item">
					<a class="nav-link text-primary" asp-controller="Hotels" asp-action="HHOtel">Book</a>
				</li>
			</ul>
			<form asp-action="Customer" asp-controller="Hotels">

				<button class="btn btn-outline-primary mt-3 mr-sm-2">Customer</button>
			</form>
			<input type="button" class="btn btn-outline-primary  mr-sm-2" data-target="#RegisterModal" data-toggle="modal" value="Register">
			<input type="button" class="btn btn-outline-primary my-2 my-lg-0" data-target="#loginModal" data-toggle="modal" value="Login">
		</div>
	</nav>

	<div class="container body-content">

		@RenderBody()
		<hr />
		<div class="modal fade" tabindex="-1" id="RegisterModal" data-keyboard="false" data-backdrop="static">
			<div class="modal-dialog modal-sm">
				<div class="modal-content">
					<div class="modal-header">
						<h4 class="pull-right modal-title ">Register</h4>
						<button type="button" class="close" data-dismiss="modal">
							&times;
						</button>

					</div>
					<div class="modal-body">
						<form asp-controller="Hotels" asp-action="Register" method="post">
							<div class="form-group">
								<label for="inputUserName">Username</label>
								<input asp-for="@Model.Customer.Name" class="form-control" placeholder="Username"
									   type="text" id="UserName" required 
										data-bv-notempty-message="The Username is required"/>
							</div>
							<div class="form-group">
								<label >Password</label>
								
								<input asp-for="@Model.Customer.Password" type="password" class="form-control" name="password"
										placeholder="Password" required 
										data-bv-notempty-message="The password is required" />
								
								
							</div>
							<div class="form-group">

								<label for="inputPassword">Email</label>
								<input asp-for="@Model.Customer.Email" class="form-control" placeholder="Email Address"
									   type="email" id="Email" required 
										data-bv-notempty-message="The email is required"/>
							</div>
							<div class="form-group">
								<label for="inputPassword">Phone</label>
								<input asp-for="@Model.Customer.Phone" class="form-control" placeholder="Phone number"
									   id="Phone" required 
										data-bv-notempty-message="The phone is required"/>
							</div>
							
							<div class="modal-footer">
								<input type="submit" class="btn btn-primary" value="Save" />
								@*<button type="submit" class="btn btn-primary">Save</button>*@
								@*<button type="button" class="btn btn-primary"
										data-dismiss="modal">
									Personal Detail
								</button>*@
							</div>
						</form>
					</div>
					
				</div>
			</div>
		</div>
		<div class="modal fade" tabindex="-1" id="loginModal" data-keyboard="false" data-backdrop="static">
			<div class="modal-dialog modal-sm">
				<div class="modal-content">
					<div class="modal-header">
						<h4 class="modal-title">Login</h4>
						<button type="button" class="close" data-dismiss="modal">
							&times;
						</button>

					</div>
					<div class="modal-body">
						<form asp-action="Login" asp-controller="Hotels">
							<div class="form-group">
								<label for="inputUserName">Username</label>
								<input asp-for="Customer.Name" class="form-control" placeholder="Login Username"
									   type="text" id="UserName" required
									   data-bv-notempty-message="The username is required" />
							</div>
							<div class="form-group">
								<label for="inputPassword">Password</label>
								<input asp-for="Customer.Password" class="form-control" placeholder="Login Password"
									   type="password" id="Password" required
									   data-bv-notempty-message="The password is required" />
							</div>
							<div class="modal-footer">
								<button type="submit" class="btn btn-primary">Booking Now</button>
							</div>
						</form>
					</div>
					
				</div>
			</div>
		</div>
		@RenderSection("Styles", false)
		<footer>
			<p>&copy; 2018 - MVC</p>
		</footer>
	</div>
</body>
</html>
