@model MVC.Models.HotelManage
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<title></title>
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/css/bootstrap.min.css">
	<link href="http://code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.min.css" rel="stylesheet" type="text/css" />
	<script src="http://code.jquery.com/jquery-3.3.1.min.js"
			integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
			crossorigin="anonymous">
	</script>
	<script src="http://code.jquery.com/ui/1.10.4/jquery-ui.min.js"></script>

</head>
<body>
	</br>
	<div class="container">
		<div class="jumbotron rounded" style="color:rgb(201, 194, 194); background-color:rgba(0,0,0,0.7)">
			<div class="container">
				<h2 class="display-6" id="Name" name="Name">@ViewData["RoomName"]</h2>
				<h2>Reservation</h2>
				<form method="post" action="/Hotels/Info/@ViewData["RoomName"]">
					<div class="form-row">
						<div class="form-group col-md-4">
							<label for="inputName">Customer Name</label>
							<input asp-for="@Model.Order.CustomerName" class="form-control" id="CustomerName" value="@Model.Customer.Name">
						</div>
						<div class="form-group col-md-4">
							<label for="inputEmail">Email Address</label>
							<input asp-for="@Model.Order.Email" type="email" class="form-control" id="Email" value="@Model.Customer.Email">
						</div>
						<div class="form-group col-md-4">
							<label for="inputPhone">Phone</label>
							<input asp-for="@Model.Order.Phone" class="form-control" id="Phone"value="@Model.Customer.Phone">
						</div>
					</div>
					<div class="form-row">
						<div class="form-group col-md-6">
							<label for="inputAddress">Check-in Date</label>
							<input asp-for="@Model.Order.CheckinDate" class="form-control datepicker" data-provide="datepicker" value="please input date"
								   required data-bv-notempty-message="The Checkin Date is required">
							<!--                        <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">-->
						</div>
						<div class="form-group col-md-6">
							<label for="inputAddress2">Check-out Date</label>
							<input asp-for="@Model.Order.CheckoutDate" class="form-control datepicker" data-provide="datepicker" value="please input date"
								   required data-bv-notempty-message="The Checkin Date is required">
						</div>
					</div>
					<div class="form-row">
						
						<div class="form-group col-md-4">
							<select id="Num" name="Num" class="form-control">
								<option selected>1 Room</option>
								<option>2 Room</option>
								<option>3 Room</option>
								<option>4 Room</option>
								<option>5 Room</option>
							</select>
						</div>
					</div>
					<br />
					<div>
						<button type="submit" class="btn btn-primary" btn-lg>Submit</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</body>

</html>
<script lang="en" type="text/javascript">
	$('.datepicker').datepicker({
		format: 'mm/dd/yyyy',
		startDate: '-3d'
	});
</script>